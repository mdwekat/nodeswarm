{
  "compilerOptions": {
    "outDir": "./dist",
    "sourceMap": true,
    "baseUrl": "./src",
    "incremental": true,
    "target": "ESNext",
    "module": "CommonJS",
    "strict": false,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "test"
  ]
}